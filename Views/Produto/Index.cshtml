@model IEnumerable<Produto>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
	ViewData["Title"] = "Produtos";
}
<main>
	<div class="container">
		<div class="row row-cols-1 row-cols-md-3 mb-3 text-center">
			<div class="col">
				@foreach(var item in Model){
					<div class="card mb-4 rounded-3 shadow-sm">
						<div class="card-header py-3">
							<h4 class="my-0 fw-normal">@item.NomeProduto</h4>
						</div>
							<div class="card-body">
								<h1 class="card-title pricing-card-title">@item.Descricao<small class="text-muted fw-light">/mo</small></h1>
								<ul class="list-unstyled mt-3 mb-4">
									<li>@item.Detalhes</li>
									<li>@item.Preco</li>
								</ul>
								<button type="button" class="w-100 btn btn-lg btn-outline-primary mb-3">Editar</button>
								<button type="button" class="w-100 btn btn-lg btn-outline-primary">Categorizar</button>
							</div>
					</div>
				}
				
			</div>
		</div>
	</div>
</main>